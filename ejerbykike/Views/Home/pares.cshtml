
@{
    ViewBag.Title = "pares";
}
@Html.ActionLink("Index", "Index")
<h2>pares</h2>

<html>
<head>
    <title>Numeros primos</title>
</head>
<body>
    <style type="text/css">
        body {
            background-color: bisque;
            font-family: 'Comic Sans MS';
            margin: 50px;
        }

        form {
            padding: 10px;
            border-style: solid;
            width: 250px;
        }
    </style>

    <p>Mete los dos numeros para ver los pares que hay entre uno y otro</p>

    <form action="" method="post">
        <p>
            <label for="text1">Desde el numero:</label>
            <input type="text" name="text1" />
        </p>


        <p>
            <label for="text2">Hasta el numero:</label>
            <input type="text" name="text2" />
        </p>
        <p><input type="submit" value="Buscar" /></p>
    </form>

    <h3>Numeros primos encontrados</h3>

    <ul>
        @foreach (var paritos in Model)
        {
            <text>--></text> @paritos
        }
    </ul>

</body>


</html>


